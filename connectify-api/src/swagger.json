{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Connectify API",
    "description": "Esta é a documentação da Connectify API"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "users",
      "description": "Operações relacionadas a usuários"
    },
    {
      "name": "posts",
      "description": "Operações relacionadas a posts"
    },
    {
      "name": "likes",
      "description": "Operações relacionadas a likes"
    },
    {
      "name": "follow",
      "description": "Operações relacionadas a follow"
    },
    {
      "name": "comment",
      "description": "Operações relacionadas a comentários"
    }
  ],
  "paths": {
    "/user": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Cria um novo usuário",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do novo usuário",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso"
          },
          "400": {
            "description": "Erro na criação do usuário"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      },
      "put": {
        "tags": [
          "users"
        ],
        "summary": "Edita informações do usuário autenticado",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados de edição do usuário",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuário editado com sucesso",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "400": {
            "description": "Erro na edição do usuário"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/session": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Autentica um usuário",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados de autenticação do usuário",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Autenticação bem-sucedida"
          },
          "400": {
            "description": "Credenciais inválidas"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/me": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Obtém informações do usuário autenticado",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Informações do usuário obtidas com sucesso",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "401": {
            "description": "Usuário não autenticado"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/users": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Busca usuários por query",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Query para busca de usuários",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Página de resultados",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Usuários encontrados",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/User"
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/posts": {
      "post": {
        "tags": [
          "posts"
        ],
        "summary": "Cria um novo post",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do novo post",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post criado com sucesso"
          },
          "400": {
            "description": "Erro na criação do post"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/posts/fetch": {
      "get": {
        "tags": [
          "posts"
        ],
        "summary": "Listagens de posts",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Página de resultados",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Posts encontrados",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Post"
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/posts/search": {
      "get": {
        "tags": [
          "posts"
        ],
        "summary": "Busca posts por query",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "description": "Query para busca de posts",
            "required": true,
            "type": "string"
          },
          {
            "name": "page",
            "in": "query",
            "description": "Página de resultados",
            "required": false,
            "type": "integer",
            "default": 1
          }
        ],
        "responses": {
          "200": {
            "description": "Posts encontrados",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Post"
              }
            }
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/post": {
      "post": {
        "tags": [
          "posts"
        ],
        "summary": "Cria um novo post",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Dados do novo post",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post criado com sucesso"
          },
          "400": {
            "description": "Erro na criação do post"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/posts/{postId}/likes": {
      "post": {
        "tags": [
          "likes"
        ],
        "summary": "Cria um novo like em um post",
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "description": "ID do post",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "201": {
            "description": "Like criado com sucesso"
          },
          "400": {
            "description": "Erro na criação do like"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/users/{followedId}/follows": {
      "post": {
        "tags": [
          "follow"
        ],
        "summary": "Cria um novo follow em um usuário",
        "parameters": [
          {
            "name": "followedId",
            "in": "path",
            "description": "ID do usuário seguido",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "201": {
            "description": "Follow criado com sucesso"
          },
          "400": {
            "description": "Erro na criação do follow"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    },
    "/posts/{postId}/comments": {
      "post": {
        "tags": [
          "comment"
        ],
        "summary": "Cria um novo comentário em um post",
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "description": "ID do post",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Dados do novo comentário",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Comment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Comentário criado com sucesso"
          },
          "400": {
            "description": "Erro na criação do comentário"
          },
          "500": {
            "description": "Erro interno no servidor"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      }
    },
    "Post": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        }
      }
    },
    "Comment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "body": {
          "type": "string"
        }
      }
    }
  }
}