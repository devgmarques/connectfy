generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  nickname String  @unique
  email    String  @unique
  password String
  details  String?

  posts Post[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Post {
  id    Int    @id @default(autoincrement())
  title String
  body  String
  likes Int    @default(0)

  userId   String
  user     User      @relation(fields: [userId], references: [id])
  comments Comment[]

  createdAt DateTime @default(now()) @map("created_at")

  @@map("posts")
}

model Comment {
  id    Int    @id @default(autoincrement())
  title String
  body  String

  postId Int
  post   Post @relation(fields: [postId], references: [id])

  createdAt DateTime @default(now()) @map("created_at")

  @@map("comments")
}
